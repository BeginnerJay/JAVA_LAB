package JAVA_0319;

public class JAVA0319_6 {
	public static void main(String[] args) {
		double pie = 0.;
		boolean plus = true;
		
		for (int i = 1; i < 1000; i = i + 2) {
			if(plus) {
				pie = pie + 1.0/i;
				plus = false;
			} else {
				pie = pie -1.0/i;
				plus = true;
			}
			pie*=4;
			System.out.println("pie="+pie);
		}
	}
}

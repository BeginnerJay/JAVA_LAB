package chapter6;
// this를 사용하여 주소 값 반환하기

class Person {
	String name;
	int age;

	Person() { // generate default constructor
		this("이름 없음", 1); // Call Person(String, int)
	}
	
	Person(String name, int age) {
		this.name = name;
		this.age = age;
	}
	
	Person returnItSelf() { // 메서드 선언
		return this; // this 반환
	}
}

public class CallAnotherCont {
	public static void main(String[] args) {
		Person noName = new Person();
		System.out.println(noName.name);
		System.out.println(noName.age);
		
		Person p = noName.returnItSelf(); // this 값을 클래스 변수에 대입
		System.out.println(p); // noName.returnIlSelf 반환 값 출력
		System.out.println(noName); // 참조 변수 출력
	}

}

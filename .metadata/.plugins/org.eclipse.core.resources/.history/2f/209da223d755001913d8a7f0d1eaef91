package chapter4;

public class StarPyramid 
{

	public static void main(String[] args) {
		int lineCount = 4;
		int spaceCount = 3;
		int starCount = 1;
		int starCount2 = 0;
		for (int i = 0; i < lineCount; i++) {
			for (int j = spaceCount; j > 0; j--) {
				System.out.print(" ");
			}
			spaceCount--;
			for (int j = 0; j < starCount; j++) {
				System.out.print("*");
			}
			starCount = (2 * starCount2) + 1;
			starCount2++;
		System.out.println();
		}
	}
}




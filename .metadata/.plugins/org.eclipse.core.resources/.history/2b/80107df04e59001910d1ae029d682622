package chapter6;
// this를 사용하여 주소 값 반환하기

class Person2 {
	String name;
	int age;

	Person2() { // generate default constructor
		this("이름 없음", 1); // Call Person(String, int)
	}
	
	Person2(String name, int age) {
		this.name = name;
		this.age = age;
	}
	
	Person2 returnItSelf() { // 메서드 선언
		return this; // this 반환
	}
}

public class CallAnotherCont {
	public static void main(String[] args) {
		Person2 noName = new Person2();
		System.out.println(noName.name);
		System.out.println(noName.age);
		
		Person2 p = noName.returnItSelf(); // this 값을 클래스 변수에 대입
		System.out.println(p); // noName.returnIlSelf 반환 값 출력
		System.out.println(noName); // 참조 변수 출력
	}

}

package chapter4;

public class StarPyramid 
{

	public static void main(String[] args) {
		int lineCount = 4;
		int spaceCount = 3;
		int starCount = 1;
		for (int i = 1; i < lineCount; i++) {
			for (int j = spaceCount; j < 0; j--) {
				System.out.print(" ");
			}
			for (int j = 0; j < lineCount; j = (2*j)+1) {
				System.out.print("*");
			}
		System.out.println();
		}
	}
}




package chapter4;

public class StarPyramid 
{

	public static void main(String[] args) {
		int lineCount = 4;
		int spaceCount = 3;
		for (int i = 0; i < lineCount; i++) {
			for (int j = spaceCount; j <= 0; j--) {
				System.out.print(" ");
			}
			for (int j = 0; j < lineCount; j++) {
				System.out.print("*");
			}
		System.out.println();
		}
	}
}




package chapter4;

public class StarPyramid 
{

	public static void main(String[] args)
	{
		int lineCount = 4;
		int spaceCount = lineCount/2 + 1;
		int starCount = 1;
		
		for (int i = 0; i < lineCount; i++) 
		{	
			for (int j = 0; j < spaceCount; j++) 
			{
				System.out.println(" ");
			}
			for (int j = 0; j < starCount; j++) 
			{
				System.out.println("*");
			}
			for(int j = 0; j<spaceCount; j++) 
			{
				System.out.print(' ');
			}
		spaceCount -= 1; // 공백 3회 찍다가 2회 찍다가 결국 안찍음
		starCount +=2; // 별은 1 3 5 7 순으로 늘림
		System.out.println();
		}
	}
}


